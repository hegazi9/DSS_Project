<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/cover1"
    >


    <Button
        android:text="Medium"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:background="@color/logincolor"
        />


    <Button
        android:text="High"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:background="@color/exitcolor"
        />

    <Button
        android:text="LOW"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="204dp"
        android:id="@+id/button"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/startcolor"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/med"
        android:layout_below="@+id/button"
        android:layout_marginLeft="247dp"
        android:id="@+id/imageView2" />

    <ImageView
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:background="@drawable/low"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/high"
        android:id="@+id/imageView3"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:text="Back"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/logincolor"/>

</RelativeLayout>
